@inherits CandyGridChildComponent
<div class="row mt-0 mb-0 small">
    <label class="col-sm-4 col-form-label text-end text-nowrap">@Label</label>
    <div class="col-sm-8">
        <select class="form-select" @bind="PageSize">
            @foreach (var option in PageSizeOptions)
            {
                <option value="@option.Key">@option.Value</option>
            }
        </select>
    </div>
</div>