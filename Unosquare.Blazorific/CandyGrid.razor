@inherits CandyComponentBase

@using System.Linq;

<CascadingValue Value="@this" Name="Parent">
    @CandyGridColumns

    <div class="candygrid-container">
        <div class="row mt-2 mb-2">
            <div class="col-lg-4 align-self-center">
                <nav class="nav small">
                    <ul class="pagination mb-0">
                        <li class="page-item"><a class="page-link" href="#" aria-label="First"><i class="fas fa-backward"></i></a></li>
                        <li class="page-item"><a class="page-link" href="#" aria-label="Previous"><i class="fas fa-step-backward"></i></a></li>
                        @for (var i = 1; i <= Math.Min(5, TotalPages); i++)
                        {
                            var pageNumber = i;
                            <li class="page-item @(CurrentPage == pageNumber ? "active" : string.Empty)">
                                <button class="page-link"
                                   href="#" aria-label="Page @pageNumber" @onclick="(async (e) => await RequestPage(pageNumber))">
                                    @pageNumber
                                </button>
                            </li>
                        }
                        <li class="page-item"><a class="page-link" href="#" aria-label="Next"><i class="fas fa-step-forward"></i></a></li>
                        <li class="page-item"><a class="page-link" href="#" aria-label="Last"><i class="fas fa-forward"></i></a></li>
                    </ul>
                </nav>
            </div>
            <div class="col-lg-5 align-self-center">
                <div class="btn-toolbar" role="toolbar">
                    <div class="btn-group btn-group-sm mr-2" role="group"><button class="btn btn-link" type="button"><i class="fas fa-plus"></i>&nbsp;Add New</button><button class="btn btn-link" type="button"><i class="far fa-check-square"></i>&nbsp;Select All</button></div>
                    <div class="btn-group btn-group-sm"
                         role="group"><button class="btn btn-link" type="button"><i class="fas fa-print"></i>&nbsp;Print</button><button class="btn btn-link" type="button"><i class="fas fa-external-link-alt"></i>&nbsp;Export</button></div>
                </div>
            </div>
            <div class="col-lg-3 align-self-center">
                <div class="input-group input-group-sm">
                    <div class="input-group-prepend"><span class="input-group-text"><i class="fas fa-search"></i></span></div><input type="search" class="form-control" placeholder="search . . .">
                </div>
            </div>
        </div>

        <div class="table-responsive table-borderless candygrid-table">
            <table class="table table-striped table-bordered table-hover table-sm">
                <thead class="thead-dark">
                    <tr>
                        @foreach (var col in Columns)
                        {
                            <th class="candygrid-column-header" scope="col">
                                <div class="clearfix">
                                    <div class="candygrid-column-sortable float-left">
                                        <a class="candygrid-column-sortable text-light" href="#">@col.Title</a>
                                        <i class="fas fa-caret-up"></i>
                                        <i class="fas fa-caret-down"></i>
                                    </div>
                                    <div class="float-right dropdown">
                                        <button class="btn btn-light candygrid-column-header-button" type="button" data-toggle="dropdown" data-boundary="window"><i class="fas fa-filter"></i></button>
                                        <div class="dropdown-menu candygrid-dropdown-menu" role="menu">
                                            <h6 class="popover-header mb-2">Filter Settings</h6>
                                            <form>
                                                <div class="pr-1 pl-1">
                                                    <select class="form-control custom-select custom-select-sm">
                                                        <option value="12" selected="">Contains</option>
                                                        <option value="13">Equals</option>
                                                        <option value="14">Does not equal</option>
                                                    </select>
                                                    <input class="form-control form-control form-control-sm mt-2" type="text" autocomplete="off" inputmode="verbatim" placeholder="filter string">
                                                </div>
                                                <div class="p-1 mt-2 clearfix">
                                                    <button class="btn btn-danger float-right btn-sm" type="button"><i class="fas fa-times-circle"></i></button>
                                                    <button class="btn btn-success float-right btn-sm mr-1" type="button"><i class="fas fa-check-circle"></i></button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @if (DataItems == null || DataItems.Count == 0)
                    {
                        <tr>
                            <td colspan="@Columns.Count">
                                @StatusText
                            </td>
                        </tr>
                    }
                    else
                    {
                        @foreach (var item in DataItems)
                        {
                            <tr @ondblclick="(async () => await RaiseOnBodyRowDoubleClick(item))">
                                @foreach (var col in Columns)
                                {
                                    <td>
                                        @if (col.DataTemplate != null)
                                        {
                                            @col.DataTemplate(item)
                                        }
                                        else
                                        {
                                            <div class="candygrid-cell clearfix">
                                                <div class="btn-group btn-group-sm candygrid-btn-group-sm mr-2 float-left">
                                                    <button class="btn btn-info" type="button" title="Go to details">
                                                        <i class="fas fa-ellipsis-h"></i>
                                                    </button>
                                                    <button class="btn btn-warning" type="button" title="Edit">
                                                        <i class="fas fa-pen"></i>
                                                    </button>
                                                    <button class="btn btn-danger " type="button" title="Delete">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </div>
                                                <label class="custom-control custom-checkbox mb-0 float-left mr-1">
                                                    <input type="checkbox" class="custom-control-input">
                                                    <span class="custom-control-label">KB 4320</span>
                                                </label>
                                                <span class="float-left">@GetColumnValue(col, item)</span>
                                            </div>
                                        }
                                    </td>
                                }
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="row mt-2 mb-2">
            <div class="col-lg-4 align-self-center">
                <nav class="nav small">
                    <ul class="pagination mb-0">
                        <li class="page-item"><a class="page-link" href="#" aria-label="First"><i class="fas fa-backward"></i></a></li>
                        <li class="page-item"><a class="page-link" href="#" aria-label="Previous"><i class="fas fa-step-backward"></i></a></li>
                        <li class="page-item"><a class="page-link" href="#" aria-label="Page 1">1</a></li>
                        <li class="page-item"><a class="page-link" href="#" aria-label="Page 2">2</a></li>
                        <li class="page-item"><a class="page-link" href="#" aria-label="Page 3">3</a></li>
                        <li class="page-item"><a class="page-link" href="#" aria-label="Page 4">4</a></li>
                        <li class="page-item"><a class="page-link" href="#" aria-label="Page 5">5</a></li>
                        <li class="page-item"><a class="page-link" href="#" aria-label="Next"><i class="fas fa-step-forward"></i></a></li>
                        <li class="page-item"><a class="page-link" href="#" aria-label="Last"><i class="fas fa-forward"></i></a></li>
                    </ul>
                </nav>
            </div>
            <div class="col-lg-5 align-self-center">
                <span class="small">Showing @StartRecordNumber to @EndRecordNumber of @TotalRecordCount records (Filtered from @FilteredRecordCount total records)</span>
            </div>
            <div class="col-lg-3 align-self-center">
                <div class="form-group row mt-0 mb-0 small">
                    <label class="col-sm-4 col-form-label text-right text-nowrap">Page Size:</label>
                    <div class="col-sm-8">
                        <select class="custom-select form-control-sm custom-select-sm" @bind="RequestedPageSize">
                            <option value="10">10</option>
                            <option value="20">20</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>
</CascadingValue>